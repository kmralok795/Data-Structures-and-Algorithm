public class Main {
  
  public static int minEatingSpeed(int[] piles, int h){
    int low=1;
    int high=getBiggestPiles(piles);
    int ans=high;
    while(low<=high){
      int mid=low+(high-low)/2;
      int hours=0;
      for(int p:piles){
         if(p%mid==0){
           hours+=p/mid;
         }else{
           hours+=(p/mid)+1;
         }
         //hours+=((p+mid-1)/min);
      }
      
      if(hours<=h){
        ans=mid;
        high=mid-1;
      }else{
        low=mid+1;
      }
    }return ans;
  }
  public static int getBiggestPiles(int[] piles){
    int max=piles[0];
    for(int p:piles){
      max=Math.max(p, max);
    }return max;
  }
    public static void main(String[] args) {
       int[] piles={3, 6, 7, 11};
       System.out.println("Minimum number of bananas she ate every hour: "+minEatingSpeed(piles, 8));
  }
}
