class main{
  public static void printArray(int[] nums){
    for(int i=0; i<nums.length; i++){
      System.out.print(nums[i]+" ");
    }
    System.out.println();
  }
  public static void leftAndRightSumDifferencesBrute(int[] nums){
   int ans[]=new int[nums.length];
    for(int i=0; i<nums.length; i++){
       int leftSum=0;
       int rightSum=0;
       
       for(int j=0; j<i; j++){
          leftSum+=nums[j];
       }
       for(int j=i+1; j<nums.length; j++){
          rightSum+=nums[j];
       }
      ans[i]=Math.abs(leftSum-rightSum);
    }printArray(ans);
  }
  
  
  
  public static void leftAndRightSumDifferencesOptimal(int[] nums){
    int n=nums.length;
    int[] ans=new int[n];
    int totalSum=0;
    for(int num:nums){
      totalSum+=num;
    }
    
    int leftSum=0;
    for(int i=0; i<n; i++){
      int rightSum=totalSum-leftSum-nums[i];
      ans[i]=Math.abs(leftSum-rightSum);
      leftSum+=nums[i];
    }printArray(ans);
  }
  public static void main(String ar[]){
    int[] nums={10, 4, 8, 3};
    leftAndRightSumDifferencesBrute(nums);
    leftAndRightSumDifferencesOptimal(nums);
  }
}
